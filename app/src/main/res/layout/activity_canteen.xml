<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="arnold.eureka_mobile.Activity.CanteenActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!--canteen name-->
        <TableRow>
            <TextView
                android:id="@+id/title_canteenName"
                android:text="Canteen:"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:textSize="17sp"
                android:paddingTop="5sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/content_canteenName"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:paddingTop="5sp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="Boon Lay Canteen" />
        </TableRow>

        <!--canteen address-->
        <TableRow>
            <TextView
                android:id="@+id/title_canteenAddress"
                android:text="Address:"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:paddingTop="5sp"
                android:textSize="17sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/content_canteenAddress"
                android:paddingTop="5sp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="123 Boon Lay Avenue S123456" />
        </TableRow>
    </TableLayout>

    <!--line break-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
