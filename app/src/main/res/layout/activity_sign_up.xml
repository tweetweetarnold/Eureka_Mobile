    <!--android:layout_height="70dp"-->
    <!--android:textSize="25sp"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_marginTop="30dp"-->
    <!--android:layout_marginBottom="30dp" />-->

</LinearLayout>